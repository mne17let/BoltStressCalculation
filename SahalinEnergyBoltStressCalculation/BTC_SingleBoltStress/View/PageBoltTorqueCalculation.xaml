<Page x:Class="SahalinEnergyBoltStressCalculation.PageClassesFolder.PageBoltTorqueCalculation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SahalinEnergyBoltStressCalculation.PageClassesFolder"
      mc:Ignorable="d"
      Title="PageBoltTorqueCalculation">
    <Page.Resources>
        <Style x:Key="CalcButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#37496d"/> 

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="CalcButtonBorder" Background="{TemplateBinding Background}">
                            <ContentControl Content="{TemplateBinding Content}"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#476995"/> 
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#e64d3d"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        
    </Page.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Images/backgroundWhite.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="0.6*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
        </Grid.RowDefinitions>
        
        
        
        
        

        <Button Grid.ColumnSpan="2" Grid.Row="0" 
                Foreground="White">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="#e64d3d">
                        <ContentControl Content="{TemplateBinding Content}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <TextBlock FontSize="25" FontWeight="Bold">
                Torque calculation based on bolt material yield stress
            </TextBlock>
        </Button>

        <ComboBox Name="ComboBoxWithGrades" Grid.Row="1" Grid.Column="0" 
                  HorizontalAlignment="Center" VerticalAlignment="Center"
                  FontSize="30" FontWeight="Bold" SelectedIndex="0"
                  VerticalContentAlignment="Center">
            <ComboBoxItem Name="HintItemGrade" MaxHeight="0">Pick bolt grade</ComboBoxItem>
            <ComboBoxItem Name="DefaultItemGrade">Custom</ComboBoxItem>
            <ComboBoxItem Name="Grade111">A193 B7</ComboBoxItem>
            <ComboBoxItem Name="Grade22">A193 B7M</ComboBoxItem>
            <ComboBoxItem Name="Grade32">A193 B16</ComboBoxItem>
            <ComboBoxItem Name="Grade42">A320 L7</ComboBoxItem>
            <ComboBoxItem Name="Grade52">A320 L7M</ComboBoxItem>
            <ComboBoxItem Name="Grade62">A320 L43</ComboBoxItem>
            <ComboBoxItem Name="Grade72">A193 B8 class 1</ComboBoxItem>
            <ComboBoxItem Name="Grade82">A193/A320 B8 class 2</ComboBoxItem>
            <ComboBoxItem Name="Grade92">A193/A320 B8M class 2</ComboBoxItem>
            <ComboBoxItem Name="Grade102">A193 B8M2 class 2B</ComboBoxItem>
            <ComboBoxItem Name="Grade112">A453 grade 660 A, B and C</ComboBoxItem>
        </ComboBox>
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center"
                        Margin="5 0 5 0">
                <TextBlock Name="TextYeildStress" FontSize="15" VerticalAlignment="Center"
                       Background="#674172" 
                       Foreground="White" Visibility="Visible"
                           Padding="3">YEILD Stress, psi</TextBlock>
                <TextBox Name="TextBoxYieldStress" FontSize="15" 
                     VerticalAlignment="Center" Visibility="Visible" 
                     PreviewTextInput="OnlyNumbers" PreviewKeyDown="WithoutSpace">
                </TextBox>
            </StackPanel>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center"
                        Margin="5 0 5 0">
                <TextBlock FontSize="15" VerticalAlignment="Center"
                       Background="#674172" 
                       Foreground="White"
                           Padding="3">% of YEILD stress</TextBlock>
                <TextBox Name="TextBoxForYieldPercent" FontSize="15" VerticalAlignment="Center"
                     MinWidth="50" PreviewTextInput="OnlyNumbersAndOnly100" PreviewKeyDown="WithoutSpace"
                     MaxLength="10">
                </TextBox>
            </StackPanel>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center"
                        Margin="5 0 5 0">
                <TextBlock FontSize="15" VerticalAlignment="Center"
                       Background="#674172" 
                       Foreground="White" Visibility="Visible"
                           Padding="3">σ, psi</TextBlock>
                <TextBlock Name ="TextBoxForCalculateSigma" FontSize="15" VerticalAlignment="Center"
                       Background="White" Visibility="Visible"></TextBlock>
            </StackPanel>

        </StackPanel>

        <ComboBox Name="ComboBoxWithBoltSize" Grid.Row="3" Grid.Column="0"
                  HorizontalAlignment="Center" VerticalAlignment="Center"
                  FontSize="30" FontWeight="Bold" SelectedIndex="0" IsEnabled="False"
                  HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            
            <ComboBoxItem Name="HintItemSizeBeforeGrade" MaxHeight="0">Pick bolt grade at first</ComboBoxItem>
            <ComboBoxItem Name="HintItemSize" MaxHeight="0">Pick bolt size</ComboBoxItem>
            <ComboBoxItem Name="DefaultItem">Custom</ComboBoxItem>
            <ComboBoxItem Name="Size1">1/2" UNC</ComboBoxItem>
            <ComboBoxItem Name="Size2">5/8" UNC</ComboBoxItem>
            <ComboBoxItem Name="Size3">3/4" UNC</ComboBoxItem>
            <ComboBoxItem Name="Size4">7/8" UNC</ComboBoxItem>
            <ComboBoxItem Name="Size5">1" UN8</ComboBoxItem>
            <ComboBoxItem Name="Size6">1 1/8" UN8</ComboBoxItem>
            <ComboBoxItem Name="Size7">1 1/4" UN8</ComboBoxItem>
            <ComboBoxItem Name="Size8">1 3/8" UN8</ComboBoxItem>
            <ComboBoxItem Name="Size9">1 1/2" UN8</ComboBoxItem>
            <ComboBoxItem Name="Size10">1 5/8" UN8</ComboBoxItem>
            <ComboBoxItem Name="Size11">1 3/4" UN8</ComboBoxItem>
            <ComboBoxItem Name="Size12">1 7/8" UN8</ComboBoxItem>
            <ComboBoxItem Name="Size13">2" UN8</ComboBoxItem>
            <ComboBoxItem Name="Size14">2 1/4" UN8</ComboBoxItem>
            <ComboBoxItem Name="Size15">2 1/2" UN8</ComboBoxItem>
            <ComboBoxItem Name="Size16">2 3/4" UN8</ComboBoxItem>
            <ComboBoxItem Name="Size17">3" UN8</ComboBoxItem>
            <ComboBoxItem Name="Size18">3 1/4" UN8</ComboBoxItem>
            <ComboBoxItem Name="Size19">3 1/2" UN8</ComboBoxItem>
            <ComboBoxItem Name="Size20">3 3/4" UN8</ComboBoxItem>
            <ComboBoxItem Name="Size21">4" UN8</ComboBoxItem>
        </ComboBox>

        <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal"
                    HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanel Orientation="Vertical" VerticalAlignment="Center"
                        Margin="5">
                <TextBlock FontSize="12" VerticalAlignment="Center" 
                       Background="#674172" 
                       Foreground="White"
                       Padding="3 0 3 0">
                    Thread Major
                    <LineBreak/>
                    Diameter D, in
                </TextBlock>
                <TextBox Name="TextBoxFor_D" VerticalAlignment="Center" FontSize="20" 
                     
                     PreviewTextInput="OnlyNumbers" PreviewKeyDown="WithoutSpace">
                </TextBox>
            </StackPanel>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center"
                        Margin="5">
                <TextBlock FontSize="12" VerticalAlignment="Center"
                       Background="#674172" 
                       Foreground="White"
                           Padding="3 0 3 0">
                    Pitch diameter
                    <LineBreak/>
                    of thread E, in
                </TextBlock>
                <TextBox Name="TextBoxFor_E" VerticalAlignment="Center" FontSize="20" 
                     PreviewTextInput="OnlyNumbers" PreviewKeyDown="WithoutSpace">

                </TextBox>
            </StackPanel>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center"
                        Margin="5">
                <TextBlock FontSize="12" VerticalAlignment="Center"
                       Background="#674172" 
                       Foreground="White"
                           Padding="3 0 3 0">
                    Hex size (nut)
                    <LineBreak/>
                    H, in
                </TextBlock>
                <TextBox Name="TextBoxFor_H" VerticalAlignment="Center" FontSize="20" 
                     PreviewTextInput="OnlyNumbers" PreviewKeyDown="WithoutSpace">

                </TextBox>
            </StackPanel>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center"
                        Margin="5">
                <TextBlock FontSize="12" VerticalAlignment="Center"
                       Background="#674172" 
                       Foreground="White"
                           Padding="3 0 3 0">
                    Nut internal
                    <LineBreak/>
                    chamfer K, in
                </TextBlock>
                <TextBox Name="TextBoxFor_K" VerticalAlignment="Center" FontSize="20" 
                     PreviewTextInput="OnlyNumbers" PreviewKeyDown="WithoutSpace">

                </TextBox>
            </StackPanel>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center"
                        Margin="5">
                <TextBlock FontSize="12" VerticalAlignment="Center"
                       Background="#674172" 
                       Foreground="White"
                           Padding="3 0 3 0">
                    Thread pitch
                    <LineBreak/>
                    P, in
                </TextBlock>
                <TextBox Name="TextBoxFor_P" VerticalAlignment="Center" FontSize="20" 
                     PreviewTextInput="OnlyNumbers" PreviewKeyDown="WithoutSpace">
                </TextBox>
            </StackPanel>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center"
                        Margin="5">
                <TextBlock FontSize="12" VerticalAlignment="Center"
                       Background="#674172" 
                       Foreground="White"
                           Padding="3 0 3 0">
                    Number of threads
                    <LineBreak/>
                    per inch
                </TextBlock>
                <TextBox Name="TextBoxFor_NOTPI" VerticalAlignment="Center" FontSize="20" 
                     PreviewTextInput="OnlyNumbers" PreviewKeyDown="WithoutSpace">
                </TextBox>
            </StackPanel>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center"
                        Margin="5">
                <TextBlock FontSize="12"
                       Background="#674172" 
                       Foreground="White"
                           Padding="3 0 3 0">
                    Nut width
                    <LineBreak/>
                </TextBlock>
                <TextBox Name="TextBoxFor_NutWidth" VerticalAlignment="Center"
                         FontSize="20" 
                     PreviewTextInput="OnlyNumbers" PreviewKeyDown="WithoutSpace">
                </TextBox>
            </StackPanel>
            
        </StackPanel>
        <StackPanel Grid.Row="5" Grid.Column="0" Orientation="Horizontal"
                    VerticalAlignment="Center" HorizontalAlignment="Center">

            <StackPanel Orientation="Vertical" VerticalAlignment="Center"
                        Margin="5">
                <TextBlock Name="FrictionCoefficientText" FontSize="15"
                           VerticalAlignment="Center"
                           Background="#674172" 
                       Foreground="White"
                       Padding="3 0 3 0">
                Friction coefficient f
                </TextBlock>
                <TextBox Name="TextBoxForFrictionCoefficient" VerticalAlignment="Center"
                         FontSize="20" MaxLength="8"
                     PreviewTextInput="OnlyNumbersAndCountK" 
                     PreviewKeyDown="WithoutSpaceAndMinus004" ToolTip="Введите коэффициент трения">
                </TextBox>
            </StackPanel>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center"
                        Margin="5">
                <TextBlock Name="KCoefficientText" FontSize="15"
                           VerticalAlignment="Center"
                           Background="#674172" 
                       Foreground="White"
                       Padding="3 0 3 0">
                Nut factor K
                </TextBlock>
                <TextBox Name="TextBoxForKCoefficient" VerticalAlignment="Center"
                         FontSize="20" MaxLength="8"
                         PreviewTextInput="OnlyNumbers" 
                     PreviewKeyDown="WithoutSpace">
                </TextBox>
            </StackPanel>

        </StackPanel>


        <StackPanel Name="ForcePerBoltTable" Orientation="Vertical" Grid.Row="2" Grid.Column="1"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="Hidden">
            <TextBlock Background="#e64d3d" FontSize="25" FontWeight="Bold"
                       Foreground="White" Padding="5 2 5 2" Margin="0">
                Force per bolt
            </TextBlock>
            <TextBlock Name="TextBlock_ForcePerBolt" Background="White" FontSize="25" FontWeight="Bold"
                       Foreground="Black" Padding="5 2 5 2" Margin="0">
                F
            </TextBlock>
        </StackPanel>

        <StackPanel  Name="ResOne_Table" Orientation="Vertical" Grid.Row="3" Grid.Column="1"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="Hidden">
            <TextBlock Background="#e64d3d" FontSize="25" FontWeight="Bold"
                       Foreground="White" Padding="5 2 5 2" Margin="0">
                API 6A Annex D
            </TextBlock>
            <TextBlock Name="Text_TauAPI6AAnnexD" Background="White" FontSize="25" FontWeight="Bold"
                       Foreground="Black" Padding="5 2 5 2" Margin="0">
                τ
            </TextBlock>
        </StackPanel>



        <StackPanel Name="ResTwo_Table" Orientation="Vertical" Grid.Row="4" Grid.Column="1"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="Hidden">
            <TextBlock Background="#e64d3d" FontSize="25" FontWeight="Bold"
                       Foreground="White" Padding="5 2 5 2" Margin="0">
                ASME PCC-1 Appendix J
            </TextBlock>
            <TextBlock Name="Text_TauASMEPCC_1AppendixJ" Background="White" FontSize="25" FontWeight="Bold"
                       Foreground="Black" Padding="5 2 5 2" Margin="0">
                τ
            </TextBlock>
        </StackPanel>

        <StackPanel Name="ResThree_Table" Orientation="Vertical" Grid.Row="5" Grid.Column="1"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="Hidden">
            <TextBlock Background="#e64d3d" FontSize="25" FontWeight="Bold"
                       Foreground="White" Padding="5 2 5 2" Margin="0">
                ASME PCC-1 Appendix K (Simplified)
            </TextBlock>
            <TextBlock Name="Text_TauASMEPCC_1AppendixK_Simplified" Background="White" FontSize="25" FontWeight="Bold"
                       Foreground="Black" Padding="5 2 5 2" Margin="0">
                τ
            </TextBlock>
        </StackPanel>


        <Button x:Name="InfoBanner" Grid.Row="3" Grid.Column="1">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="#e64d3d" HorizontalAlignment="Center">
                        <ContentControl Content="{TemplateBinding Content}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <TextBlock FontSize="25" Foreground="White" Padding="10" FontWeight="Bold">
                ВВЕДИТЕ ДАННЫЕ
                <LineBreak/>
                И НАЖМИТЕ "ПОСЧИТАТЬ"
            </TextBlock>
        </Button>

        <Button Name="CalculationButton_SingleBoltStress" Grid.Row="7" Grid.Column="0" 
                Grid.ColumnSpan="2" FontSize="30" 
                Style="{StaticResource CalcButtonStyle}" Foreground="White"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontWeight="Bold">
            ПОСЧИТАТЬ
        </Button>
        
    </Grid>
</Page>
